<UserControl x:Class="WpfApp1.Extras.Views.LabelText"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApp1.Extras.Views"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="200"
             x:Name="self">
    <Grid>
        <Border BorderThickness="2" BorderBrush="Cyan">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="{Binding Title, ElementName=self}" Height="50" Width="50" Background="Orange" />
                <TextBox Text="{Binding Content, ElementName=self}" Height="50" Width="150"></TextBox>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
